<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.thesis_app">

    <!-- Permissions (must be inside <manifest>, not <application>) -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/wordwhiz_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/wordwhiz_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.THESIS_APP">

        <!-- Main launcher activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.THESIS_APP">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".StudentProgressActivity"
            android:exported="false"
            android:label="Student Progress"/>

        <!-- Other activities -->
        <activity android:name=".TeacherActivity" />
        <activity android:name=".QuizActivity" android:exported="true" />
        <activity android:name=".LoginActivity" android:exported="true" />
        <activity android:name=".LoadingActivity" android:exported="true" />
        <activity android:name=".StudentActivity" android:exported="true" />
        <activity android:name=".SignupActivity" android:exported="true" />
        <activity android:name=".ClassDetailActivity" android:exported="true" />
        <activity android:name=".PreAssessmentActivity" android:exported="true" />
        <activity android:name=".ProgressListActivity" android:exported="true" />
        <activity android:name=".TeacherIntroActivity" android:exported="true" />
        <activity android:name=".QuizDetailActivity" android:exported="true" />
        <activity android:name=".SpellingAchievementsActivity" android:exported="true" />
        <activity android:name=".AboutUsActivity" android:exported="true" />
    </application>
</manifest>