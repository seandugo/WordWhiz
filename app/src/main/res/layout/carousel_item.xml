<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="@dimen/margin_activity_teacher_medium"
    app:cardCornerRadius="@dimen/card_radius"
    app:cardElevation="@dimen/card_elevation"
    app:strokeColor="@color/black"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/padding_card">

        <ImageView
            android:id="@+id/carouselImage"
            android:layout_width="@dimen/carousel_image_size"
            android:layout_height="@dimen/carousel_image_size"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/carouselText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item"
            android:textSize="@dimen/carousel_text_size"
            android:textColor="@android:color/black"
            android:paddingTop="@dimen/margin_small"
            android:gravity="center" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
