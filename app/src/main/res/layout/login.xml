<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeRefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="@dimen/login_screen_padding">

        <!-- Logo Section -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="@dimen/login_logo_width"
            android:layout_height="@dimen/login_logo_height"
            android:layout_weight="3"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/wordwhiz_logo"
            android:transitionName="app_logo" />

        <!-- App Title -->
        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/pixel"
            android:text="WORDWHIZ"
            android:textColor="#FFC007"
            android:textSize="@dimen/login_title_text_size"
            android:textStyle="bold"
            android:shadowColor="#000000"
            android:shadowDx="@dimen/login_text_shadow_dx"
            android:shadowDy="@dimen/login_text_shadow_dy"
            android:shadowRadius="@dimen/login_text_shadow_radius" />

        <!-- Teacher Login -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="188dp"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/emailLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/login_input_margin"
                android:hint="Email"
                app:boxStrokeColor="#FFC007">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/passwordLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/login_input_margin"
                android:hint="Password"
                app:boxStrokeColor="#FFC007"
                app:endIconMode="password_toggle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword" />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:id="@+id/forgotPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pixel"
                android:textSize="@dimen/text_profile"
                android:layout_gravity="start"
                android:layout_marginLeft="20dp"
                android:text="Forgot Password?" />
        </LinearLayout>

        <!-- Login Button -->
        <Button
            android:id="@+id/LoginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/login_button_selector"
            android:fontFamily="@font/pixel"
            android:text="Log in"
            android:textColor="#000"
            android:layout_marginTop="@dimen/login_button_margin_top" />

        <!-- Create Account -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_create_account_height"
            android:layout_marginTop="@dimen/login_create_account_margin_top"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pixel"
                android:textSize="@dimen/text_profile"
                android:text="Don't have an account yet?" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pixel"
                android:text=" Create Account"
                android:textSize="@dimen/text_profile"
                android:textColor="#FFC007" />
        </LinearLayout>

    </LinearLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
