<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Placeholder when no saved words -->
    <LinearLayout
        android:id="@+id/emptyLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/dayImage"
            android:layout_width="wrap_content"
            android:layout_height="346dp"
            android:contentDescription="Daily spelling image"
            android:src="@drawable/saved_words" />

        <TextView
            android:id="@+id/dayDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enhance your vocabulary by saving words here"
            android:gravity="center"
            android:textSize="16sp"
            android:fontFamily="@font/pixel"
            android:textColor="#333333"
            android:layout_marginBottom="32dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"/>
    </LinearLayout>

    <!-- Header + RecyclerView container -->
    <LinearLayout
        android:id="@+id/wordsListLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recallHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recall your words!"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="@font/pixel"
            android:textColor="#333333"
            android:padding="16dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/savedWordsRecycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="16dp"/>
    </LinearLayout>

</FrameLayout>
