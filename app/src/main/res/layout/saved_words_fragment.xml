<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Placeholder when no saved words -->
    <LinearLayout
        android:id="@+id/emptyLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/saved_words_fragment_empty_padding"
        android:visibility="gone">

        <ImageView
            android:id="@+id/dayImage"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/saved_words_fragment_image_height"
            android:contentDescription="Daily spelling image"
            android:src="@drawable/saved_words" />

        <TextView
            android:id="@+id/dayDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enhance your vocabulary by saving words here"
            android:gravity="center"
            android:textSize="@dimen/saved_words_fragment_description_text_size"
            android:fontFamily="@font/pixel"
            android:textColor="#333333"
            android:layout_marginBottom="@dimen/saved_words_fragment_description_margin_bottom"
            android:paddingLeft="@dimen/saved_words_fragment_description_padding_horizontal"
            android:paddingRight="@dimen/saved_words_fragment_description_padding_horizontal"/>
    </LinearLayout>

    <!-- Header + RecyclerView container -->
    <LinearLayout
        android:id="@+id/wordsListLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recallHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recall your words!"
            android:textSize="@dimen/saved_words_fragment_header_text_size"
            android:textStyle="bold"
            android:fontFamily="@font/pixel"
            android:textColor="#333333"
            android:padding="@dimen/saved_words_fragment_header_padding"
            android:visibility="gone"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/savedWordsRecycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="@dimen/saved_words_fragment_recycler_padding_horizontal"
            android:paddingRight="@dimen/saved_words_fragment_recycler_padding_horizontal"/>
    </LinearLayout>

</FrameLayout>
