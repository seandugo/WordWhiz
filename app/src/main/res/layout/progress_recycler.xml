<?xml version="1.0" encoding="utf-8"?>
    <com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <!-- centered title -->
            <TextView
                android:id="@+id/dividerTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/pixel"
                android:padding="8dp"
                android:text="Level Name"
                android:textSize="30dp"
                android:textStyle="bold" />


            <com.example.thesis_app.models.MultiSegmentProgressView
                android:id="@+id/accuracyPercentage"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Correct:"
                        android:fontFamily="@font/pixel"
                        android:layout_weight="0.33"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Wrong:"
                        android:fontFamily="@font/pixel"
                        android:textAlignment="center"
                        android:layout_weight="0.33"/>

                    <TextView
                        android:id="@+id/retriedLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Retried:"
                        android:fontFamily="@font/pixel"
                        android:textAlignment="center"
                        android:layout_weight="0.33"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/correctCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="5"
                        android:background="@drawable/correct"
                        android:layout_margin="4dp"
                        android:layout_weight="0.5"
                        android:textSize="24sp"
                        android:padding="30dp"/>

                    <TextView
                        android:id="@+id/wrongCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:background="@drawable/wrong"
                        android:textAlignment="center"
                        android:layout_margin="4dp"
                        android:padding="30dp"
                        android:textSize="24sp"
                        android:layout_weight="0.5"/>

                    <TextView
                        android:id="@+id/retriedCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:background="@drawable/retry"
                        android:textAlignment="center"
                        android:layout_margin="4dp"
                        android:padding="30dp"
                        android:textSize="24sp"
                        android:layout_weight="0.5"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
