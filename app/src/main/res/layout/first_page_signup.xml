<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/first_page_signup_padding">

    <androidx.cardview.widget.CardView
        android:id="@+id/teacher"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cardCornerRadius="@dimen/first_page_signup_card_corner_radius"
        app:cardElevation="@dimen/first_page_signup_card_elevation"
        android:layout_marginBottom="@dimen/first_page_signup_card_margin_bottom">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Background Image -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/teacher" />

            <!-- Dark overlay -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#66000000" />

            <!-- Centered Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/pixel"
                android:text="Teacher"
                android:textSize="@dimen/first_page_signup_text_size"
                android:textStyle="bold"
                android:textColor="#FFC007"
                android:shadowColor="#000000"
                android:shadowDx="@dimen/first_page_signup_shadow_dx"
                android:shadowDy="@dimen/first_page_signup_shadow_dy"
                android:shadowRadius="@dimen/first_page_signup_shadow_radius"
                android:background="#66000000"
                android:padding="@dimen/first_page_signup_text_padding" />
        </FrameLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/student"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cardCornerRadius="@dimen/first_page_signup_card_corner_radius"
        app:cardElevation="@dimen/first_page_signup_card_elevation"
        android:layout_marginTop="@dimen/first_page_signup_card_margin_top">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/student" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#66000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/pixel"
                android:text="Student"
                android:textSize="@dimen/first_page_signup_text_size"
                android:textStyle="bold"
                android:textColor="#FFC007"
                android:shadowColor="#000000"
                android:shadowDx="@dimen/first_page_signup_shadow_dx"
                android:shadowDy="@dimen/first_page_signup_shadow_dy"
                android:shadowRadius="@dimen/first_page_signup_shadow_radius"
                android:background="#66000000"
                android:padding="@dimen/first_page_signup_text_padding" />
        </FrameLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
