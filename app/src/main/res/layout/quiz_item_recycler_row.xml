<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- LEFT: Title + Subtitle -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/progress_container"
            android:layout_toLeftOf="@+id/progress_container"
            android:orientation="vertical">

            <TextView
                android:id="@+id/quiz_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pixel"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Android" />

            <TextView
                android:id="@+id/quiz_subtitle_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                tools:text="All about Android OS" />
        </LinearLayout>

        <!-- RIGHT: Circular Progress -->
        <LinearLayout
            android:id="@+id/progress_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="vertical">

            <!-- Material 3 Circular Progress -->
            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/quiz_progress_bar"
                style="@style/Widget.Material3.CircularProgressIndicator"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:max="100"
                android:progress="0"
                app:indicatorColor="?attr/colorPrimary"
                app:indicatorDirectionCircular="clockwise"
                app:indicatorInset="0dp"
                app:indicatorSize="48dp"
                app:trackColor="?attr/colorSurfaceVariant"
                app:trackThickness="6dp" />

            <!-- Percentage text -->
            <TextView
                android:id="@+id/quiz_percentage_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="0%"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>
