<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/score_dialog_card_margin"
    android:backgroundTint="@android:color/white"
    app:cardCornerRadius="@dimen/score_dialog_card_radius"
    app:cardElevation="@dimen/score_dialog_card_elevation"
    android:padding="@dimen/score_dialog_card_padding">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="center"
        android:padding="@dimen/score_dialog_inner_padding"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/score_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/pixel"
            android:textSize="@dimen/score_dialog_title_text_size"
            android:textStyle="bold"
            tools:text="Congrats! You have passed" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/score_dialog_progress_margin_top"
            android:layout_marginBottom="@dimen/score_dialog_progress_margin_bottom">

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/score_progress_indicator"
                android:layout_width="@dimen/score_dialog_progress_size"
                android:layout_height="@dimen/score_dialog_progress_size"
                app:trackColor="@color/gray"
                tools:progress="60"
                app:trackCornerRadius="@dimen/score_dialog_progress_track_radius"
                app:trackThickness="@dimen/score_dialog_progress_thickness"
                app:indicatorSize="@dimen/score_dialog_progress_size" />

            <TextView
                android:id="@+id/score_progress_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="@dimen/score_dialog_progress_text_size"
                android:textStyle="bold"
                tools:text="50%" />
        </RelativeLayout>

        <Button
            android:id="@+id/finish_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Finish"
            android:fontFamily="@font/pixel"
            android:layout_marginTop="@dimen/score_dialog_button_margin_top"
            android:paddingHorizontal="@dimen/score_dialog_button_padding_horizontal"
            android:backgroundTint="@color/primaryColor"
            android:textColor="@android:color/white" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
