<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f9f9f9">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/lecturesToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
        android:backgroundTint="@color/primaryColor"
        app:navigationIcon="@drawable/back"
        app:title="Manage Lectures" />

    <androidx.cardview.widget.CardView
        android:id="@+id/addLectureCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="@dimen/card_elevation"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="@dimen/card_margin_bottom"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/card_padding">

            <TextView
                android:id="@+id/placeholderText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADD LECTURE"
                android:textSize="@dimen/header_text_large"
                android:textStyle="bold"
                android:textColor="#FFC107"
                android:fontFamily="@font/pixel"
                android:layout_centerInParent="true"/>

            <Button
                android:id="@+id/addButton"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:backgroundTint="#FFC107"
                android:text="+"
                android:textColor="@android:color/white"
                android:textSize="@dimen/button_text_size"
                android:fontFamily="@font/pixel"
                android:padding="0dp"
                android:clickable="false"
                android:focusable="false"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap Items to Edit or Delete Quiz"
        android:padding="10dp"
        android:layout_gravity="center"
        android:background="@drawable/rounded_button"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lecturesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp"
        android:clipToPadding="false" />
</LinearLayout>
