<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/item_definition_padding">

    <TextView
        android:id="@+id/tvEmoji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/item_definition_emoji_text_size" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#222"
        android:layout_marginTop="@dimen/item_definition_margin_top_small"
        android:textSize="@dimen/item_definition_title_text_size" />

    <TextView
        android:id="@+id/tvDefinition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_definition_margin_top_small"
        android:textSize="@dimen/item_definition_definition_text_size" />

    <TextView
        android:id="@+id/tvExample"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_definition_example_margin_top"
        android:textStyle="italic"
        android:textColor="#444"
        android:textSize="@dimen/item_definition_example_text_size" />

    <TextView
        android:id="@+id/tvExplanation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_definition_margin_top_small"
        android:textColor="#666"
        android:textSize="@dimen/item_definition_explanation_text_size" />

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/item_definition_divider_margin_top" />

</LinearLayout>
