<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/class_overview_recycler_card_margin"
    app:cardCornerRadius="@dimen/class_overview_recycler_card_corner"
    app:cardElevation="@dimen/class_overview_recycler_card_elevation"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/class_overview_recycler_card_padding">

        <!-- Class Title -->
        <TextView
            android:id="@+id/dividerTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/pixel"
            android:text="Class Name"
            android:textSize="@dimen/class_overview_recycler_title_text_size"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:paddingBottom="@dimen/class_overview_recycler_title_padding_bottom" />

        <!-- Bar Graph -->
        <com.example.thesis_app.models.BarGraphView
            android:id="@+id/accuracyPercentage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/class_overview_recycler_bar_height"
            android:layout_marginVertical="@dimen/class_overview_recycler_bar_margin_vertical" />

        <!-- Statistics Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/class_overview_recycler_stats_padding_top">

            <!-- Labels Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:fontFamily="@font/pixel"
                    android:text="Active:"
                    android:textSize="@dimen/class_overview_recycler_label_text_size" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:fontFamily="@font/pixel"
                    android:text="In Lecture:"
                    android:textSize="@dimen/class_overview_recycler_label_text_size" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:fontFamily="@font/pixel"
                    android:text="Inactive:"
                    android:textSize="@dimen/class_overview_recycler_label_text_size" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:fontFamily="@font/pixel"
                    android:text="Students:"
                    android:textSize="@dimen/class_overview_recycler_label_text_size" />
            </LinearLayout>

            <!-- Values Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/class_overview_recycler_value_row_margin_top">

                <TextView
                    android:id="@+id/activeCount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="5"
                    android:textSize="@dimen/class_overview_recycler_value_text_size"
                    android:paddingVertical="@dimen/class_overview_recycler_value_padding_vertical"
                    android:paddingHorizontal="@dimen/class_overview_recycler_value_padding_horizontal"
                    android:background="@drawable/correct"
                    android:layout_marginHorizontal="@dimen/class_overview_recycler_value_margin_horizontal" />
                <TextView
                    android:id="@+id/inLectureCount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="4"
                    android:textSize="@dimen/class_overview_recycler_value_text_size"
                    android:paddingVertical="@dimen/class_overview_recycler_value_padding_vertical"
                    android:paddingHorizontal="@dimen/class_overview_recycler_value_padding_horizontal"
                    android:background="@drawable/in_lecture"
                    android:layout_marginHorizontal="@dimen/class_overview_recycler_value_margin_horizontal" />

                <TextView
                    android:id="@+id/inactiveCount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="4"
                    android:textSize="@dimen/class_overview_recycler_value_text_size"
                    android:paddingVertical="@dimen/class_overview_recycler_value_padding_vertical"
                    android:paddingHorizontal="@dimen/class_overview_recycler_value_padding_horizontal"
                    android:background="@drawable/wrong"
                    android:layout_marginHorizontal="@dimen/class_overview_recycler_value_margin_horizontal" />

                <TextView
                    android:id="@+id/studentsTotal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="9"
                    android:textSize="@dimen/class_overview_recycler_value_text_size"
                    android:paddingVertical="@dimen/class_overview_recycler_value_padding_vertical"
                    android:paddingHorizontal="@dimen/class_overview_recycler_value_padding_horizontal"
                    android:background="@drawable/retry"
                    android:layout_marginHorizontal="@dimen/class_overview_recycler_value_margin_horizontal" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
