<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@android:color/white">

    <!-- Illustration -->
    <ImageView
        android:id="@+id/dayImage"
        android:layout_width="wrap_content"
        android:layout_height="345dp"
        android:layout_marginBottom="24dp"
        android:contentDescription="Daily spelling image"
        android:src="@drawable/spelling" />

    <!-- Day Title -->
    <TextView
        android:id="@+id/dayTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expand Vocabulary"
        android:textSize="28sp"
        android:textStyle="bold"
        android:fontFamily="@font/pixel"
        android:textColor="#1565C0"
        android:layout_marginBottom="12dp"/>

    <!-- Description -->
    <TextView
        android:id="@+id/dayDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to Daily Spelling challenge!\nGet ready to practice and learn new words."
        android:gravity="center"
        android:textSize="16sp"
        android:fontFamily="@font/pixel"
        android:textColor="#333333"
        android:layout_marginBottom="32dp"/>

    <!-- Start Button -->
    <Button
        android:id="@+id/startButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Challenge"
        android:backgroundTint="#FFC007"
        android:textColor="@android:color/black"
        android:fontFamily="@font/pixel"
        android:padding="12dp"/>

</LinearLayout>
